<body>

	<nav>
		<div class="icones">
			<img class="img" src="img/logo2.png"  alt="logo3dprint">
			<a class="elemento" href="/">Sair</a>
			<a class="elemento" href="cadastrar">Cadastrar</a>
			<a class="elemento" href="index">Home</a>
		</div>
	</nav>

	<section class="container">
		<h2 id="titulo1">Inserir</h2>
		<div class="simObg">
			<p>*obrigatório</p>
		</div>
		<form action="/inserir" method="POST" enctype="multipart/form-data">
			
			<div class="form-group">
				<input  class="form-control" type="text" name="nome" placeholder="Nome Completo*"  required>
			</div>
			
			<div class="form-group">
				<input  class="form-control" type="number" name="idade" placeholder="Idade">
			</div>
			
			<div class="form-group">
				<input  class="form-control" type="number" name="telefone" placeholder="Telefone">
			</div>
			
			<div class="form-group">
				<input  class="form-control" type="text" name="plano" placeholder="Plano de saúde">
			</div>
			
			<div class="form-group">
				<textarea  class="form-control" name="ferimento" rows="4" cols="5" placeholder="Descrição do ferimento*" required></textarea>
			</div>

			<div class="form-group">
				<div class='input-wrapper'>
					<label for='pwd'>
						Foto do Paciente <span class="simObg">*</span> &#187;
					</label>
					<input id='pwd' class="form-control" type="file" name="uploaded_image" accept="image/*" value='' required>
				
					<span id='file-name'></span>
				</div>
			</div>
	
			<button type="submit" class="btn btn-outline-primary btnEditar">Inserir</button>
		</form>

	</section>
	

	<script type="text/javascript" src="components/nomeImage.js"></script>
